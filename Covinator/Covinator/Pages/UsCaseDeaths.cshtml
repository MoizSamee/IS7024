@page
@model Covinator.Pages.UsCaseDeathsModel
@{
    var casesDeathss = (QuickType.CasesDeaths[])ViewData["CasesDeaths"];
}

<div class="text-center">
    <h1 class="display-4">US: COVID Cases and Deaths</h1>
    <table>
        <tr>
            <th>Submission Date</th>
            <th>State</th>
            <th>New Cases</th>
            <th>Total Cases</th>
            <th>New Deaths</th>
            <th>Total Deaths</th>
        </tr>
        @{
            foreach (QuickType.CasesDeaths caseDeaths in casesDeathss)
            {
                <tr>
                    <td>@caseDeaths.SubmissionDate</td>
                    <td>@caseDeaths.State</td>
                    <td>@caseDeaths.NewCase</td>
                    <td>@caseDeaths.TotCases</td>
                    <td>@caseDeaths.NewDeath</td>
                    <td>@caseDeaths.TotDeath</td>

                </tr>

            }
        }
    </table>
</div>