<body>

    @if (casesDeathss.Length > 0)
    {
        <table class="table table-sortable">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>State</th>
                    <th>New Cases</th>
                    <th>Total Cases</th>
                    <th>New Deaths</th>
                    <th>Total Deaths</th>
                </tr>
            </thead>
            @{
                foreach (QuickType.CasesDeaths caseDeaths in casesDeathss)
                {
                    <tbody>
                        <tr>
                            <td>@caseDeaths.SubmissionDate</td>
                            <td>@caseDeaths.State</td>
                            <td>@caseDeaths.NewCase</td>
                            <td>@caseDeaths.TotCases</td>
                            <td>@caseDeaths.NewDeath</td>
                            <td>@caseDeaths.TotDeath</td>

                        </tr>
                    </tbody>
                }
            }
        </table>
    }

    else
    {
        <h1 class="display-4">No Data to display</h1>
    }
    <script src="~/js/tablesort.js"></script>
</body>

